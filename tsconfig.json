{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
